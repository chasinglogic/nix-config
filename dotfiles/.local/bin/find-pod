#!/bin/bash

number=1
while getopts ':lvn:' flag; do
  case "$flag" in
    n) number=$OPTARG;;
    l) limit=1;;
    v) verbose=1;;
    \?) exit 42;;
  esac
done

shift $((OPTIND - 1))

search=$1
shift;

if [[ -n $search ]]; then
  pods=$(kubectl get pods)
  header=$(echo "$pods" | head -n1)
  body=$(echo "$pods" | grep -v NAME | grep $search)
  if [[ -n $verbose ]]; then
    echo "$header"
  else
    body=$(echo "$body" | awk '{ print $1 }')
  fi

  if [[ -n $limit ]]; then
    echo $(echo "$body" | sed "${number}q;d")
  else
    echo "$body"
  fi
else
    kubectl get pods $@ | grep -v NAME | fzf | awk '{ print $1 }'
fi
